{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*"]
}
